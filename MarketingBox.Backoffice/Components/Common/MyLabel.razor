@if(IsShow == true)
{
    <span style="background: @Color; margin-left: 5px; border-radius: 5px"><span style="margin: 5px">@Text</span></span>
}

@code {

    [Parameter]
    public string Color { get; set; } = "white";

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public bool? IsShow { get; set; } = true;

}