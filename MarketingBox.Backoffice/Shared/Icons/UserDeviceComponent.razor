@using MarketingBox.Backoffice.Abstractions.Bo

<img style="height:24px;" src="/images/Devices/@(DeviceInfo.FormFactor.ToString()?.ToLower()).svg" title="@DeviceInfo.FormFactor" alt="" />
<img style="height:24px;" src="/images/Devices/@(DeviceInfo.AppHost.ToString()?.ToLower()).svg" title="@DeviceInfo.AppHost" alt=""/>

@if (!string.IsNullOrEmpty(DeviceInfo.OsVersion))
{
    <img style="height:24px;" title="@DeviceInfo.OsVersion" src="/images/Devices/@(DeviceInfo.OsVersion).png" alt=""/>
    return;
}

@switch (DeviceInfo.PlatformType)
{
    case PlatformType.Windows:
        <WindowsRenderComponent/>
        break;
    case PlatformType.Android:
        <AndroidRenderComponent/>
        break;
    default:
        <img style="height:24px;" src="/images/Devices/@(DeviceInfo.PlatformType).png" title="@DeviceInfo.PlatformType" alt="">
        break;
}



@code {
    [Parameter]
    public DeviceInfo DeviceInfo { get; set; }

}