<div class="well page active" style="box-shadow: 0 0 18px black; margin: auto; width: 600px;">
    @if (!string.IsNullOrEmpty(Caption))
    {
        <table style="width: 100%">
            <tr>
                <td style="text-align: left;">
                    <h1 class="dialog-header">
                        @Caption
                    </h1>
                </td>
                <td style="text-align: right; vertical-align: top;">
                    <div class="btn btn-xs" style="font-size: 15px; margin-top: -10px; margin-right: -10px; color: white; text-shadow: 0 0 2px black;" @onclick="OnClose">
                        <span class="glyphicon glyphicon-remove"></span>
                    </div>
                </td>
            </tr>
        </table>
    }
    @ChildContent
</div>

@code {
    [Parameter]
    public string Caption { get; set; }

    [Parameter]
    public int Width { get; set; } = 600;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

}