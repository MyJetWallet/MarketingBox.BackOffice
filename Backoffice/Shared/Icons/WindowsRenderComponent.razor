@using Backoffice.Abstractions.Bo

<img style="height:24px;" title="@DeviceInfo.OsVersion" src="images/Devices/@GetPngName(DeviceInfo.OsVersion)" alt="">

@code {
    [Parameter]
    public DeviceInfo DeviceInfo { get; set; }

    private string GetPngName(string osVersion)
    {
        if (osVersion.StartsWith("8"))
        {
            return "Win8.svg";
        }
        
        if (osVersion.StartsWith("7"))
        {
            return "Win7.png";
        }
        
        return osVersion.StartsWith("10") ? "Win10.svg" : "Windows.svg";
    }
}